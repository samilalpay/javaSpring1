package mukemmelSayi;

public class Main {

	public static void main(String[] args) {
		//mukemmelSayi
		int sayi = 6;
		int toplam=0;
		for(int i=0; i<sayi; i++) {
		if(sayi % i == 0) {
			toplam=toplam+i;
					}
			}
		if(sayi==toplam) {
			System.out.println("Mukemmel sayi");
		}else {
			System.out.println("Mukemmel sayi degil");
				}
	}

}
